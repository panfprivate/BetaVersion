<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EventEditor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:text="Event Title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        
        <EditText 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Event title"
            android:id="@+id/event_title_et"
            />
    </LinearLayout>
            
    <TextView 
         android:text="Event Body"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
        />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Event body..."
            android:id="@+id/event_body_et"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_save_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_weight="2" />

        <Button
            android:id="@+id/btn_cancel_event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CANCEL" 
            android:layout_weight="2" />

        <Button
            android:id="@+id/btn_delete_event"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DELETE"
            android:textSize="10sp" />

    </LinearLayout>
        
</LinearLayout>